<mvc:View
  controllerName="flightui5eh.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m">

  <Page id="detailPage" title="Flight Details" showNavButton="true" navButtonPress="oNavButton_press">


 <Table id="detailTable" items="{detailDataModel>/}">
      <headerToolbar>
        <Toolbar id="_IDGenToolbar1">
          <Title id="_IDGenTitle1" text="Airlines Items" />
        </Toolbar>
      </headerToolbar>

      <columns>
        <Column id="_IDGenColumn3"><Text id="_IDGenText3" text="Carrid" /></Column>
        <Column id="_IDGenColumn4"><Text id="_IDGenText7" text="Connid" /></Column>
        <Column id="_IDGenColumn5"><Text id="_IDGenText8" text="Fldate" /></Column>
        <Column id="_IDGenColumn7"><Text id="_IDGenText9" text="Price" /></Column>
        <Column id="_IDGenColumn8"><Text id="_IDGenText10" text="Currency" /></Column>
        <Column id="_IDGenColumn9"><Text id="_IDGenText11" text="PlaneType" /></Column>
        <Column id="_IDGenColumn10"><Text id="_IDGenText12" text="SeatsMax" /></Column>
        <Column id="_IDGenColumn11"><Text id="_IDGenText13" text="SeatsOcc" /></Column>
        <Column id="_IDGenColumn12"><Text id="_IDGenText14" text="PaymentSum" /></Column>
        <Column id="_IDGenColumn13"><Text id="_IDGenText15" text="Currency" /></Column>
      </columns>

      <items>
        <ColumnListItem id="_IDGenColumnListItem1">
          <cells>
            <Text id="_IDGenText16" text="{detailDataModel>Carrid}" />
            <Text id="_IDGenText17" text="{detailDataModel>Connid}" />
            <!-- <Text id="_IDGenText18" text="{detailDataModel>Fldate}" /> -->
            <Text id="_IDGenText18" text="{ path: 'detailDataModel>Fldate', type: 'sap.ui.model.type.Date', 
                  formatOptions: {  style: 'medium'  } }" />
            <Text id="_IDGenText19" text="{detailDataModel>Price}" />
            <Text id="_IDGenText20" text="{detailDataModel>Currency}" />
            <Text id="_IDGenText21" text="{detailDataModel>PlaneType}" />
            <Text id="_IDGenText22" text="{detailDataModel>SeatsMax}" />
            <Text id="_IDGenText23" text="{detailDataModel>SeatsOcc}" />
            <Text id="_IDGenText24" text="{detailDataModel>PaymentSum}" />
            <Text id="_IDGenText25" text="{detailDataModel>Currency}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>












  </Page>
</mvc:View>
